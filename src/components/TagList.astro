---
import type { Tag } from '../model/model';

interface Props {
  tags: Tag[];
  currentTag?: string;
}

const { tags, currentTag } = Astro.props;
---

<div class='tag-list'>
  {
    tags.map((t) => (
      <div class:list={['chip', { active: currentTag === t.tag }]}>
        <a class='tag-link' href={`/video/tags/${t.tag}`}>
          {t.tag} ({t.count})
        </a>
      </div>
    ))
  }
</div>

<style>
  .tag-list {
    display: flex;
    padding-left: 0;
    gap: 5px;
    font-size: 16px;
  }

  .chip {
    background-color: rgb(var(--gray-dark));
    opacity: 0.5;
    padding: 5px 10px;
    border-radius: 50px;
  }

  .chip a {
    color: var(--white);
  }

  .chip:hover {
    opacity: 0.7;
  }
  .tag-link {
    text-decoration: none;
    color: black;
  }
  .active {
    opacity: 1;
  }

  .tag-link:hover {
    color: var(--accent);
  }
</style>
